<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdatestokdataFragment">



    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="Stock Masuk" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="10dp"
            >

            <EditText
                android:id="@+id/et_barkod"
                android:layout_width="270dp"
                android:layout_height="match_parent"

                android:hint="Scan Barcode" />

            <Button
                android:id="@+id/btn_barkod"
                android:layout_width="match_parent"
                android:layout_height="match_parent"



                android:text="SCAN"
                android:textAllCaps="false" />


        </LinearLayout>

        <EditText
            android:id="@+id/et_nama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:enabled="false"
            android:hint="Nama Barang" />



        <EditText
            android:id="@+id/et_jmlstok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:enabled="false"
            android:textAlignment="center"
            android:hint="Jumlah Stok Awal" />

        <EditText
            android:id="@+id/et_jml"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:hint="Jumlah Penambahan Stok"
            android:inputType="number" />

        <TextView
            android:id="@+id/tv_jmlplus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:textSize="24sp"
            android:textAlignment="center"
            android:text="Jumlah Setelah Update" />











        <Button
            android:id="@+id/btn_updatestok"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Update Stok"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="16dp"
            android:text="Cancel"
            android:textAllCaps="false" />
    </LinearLayout>


</FrameLayout>